<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br />
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter a catchy Title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Give short description</div>
      </div>
      <div class="mb-3">
        <label for="image">Image URL</label>
        <input
          name="listing[image][url]"
          placeholder="Enter Image URL"
          type="text"
          class="form-control"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price">Price</label>
          <input
            name="listing[price]"
            placeholder="1200"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be given</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location">Location</label>
          <input
            name="listing[location]"
            placeholder="Karachi, Sindh"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be given</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country">Country</label>
        <input
          name="listing[country]"
          placeholder="Pakistan"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country should be given</div>
      </div>
      <br />
      <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    <br />
  </div>
</div>
<script src="/js/script.js"></script>
