<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form
      method="post"
      action="/listings/<%= listing._id %>?_method=put"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title">Title</label>
        <input
          name="listing[title]"
          value="<%=listing.title%>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description">Description</label>
        <textarea name="listing[description]" class="form-control" required>
<%=listing.description%></textarea
        >
        <div class="invalid-feedback">Give short description</div>
      </div>
      <div class="mb-3">
        <label for="image">Image URL</label>
        <input
          name="listing[image][url]"
          value="<%=listing.image.url%>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid Image URL</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price">Price</label>
          <input
            name="listing[price]"
            value="<%=listing.price%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location">Location</label>
          <input
            name="listing[location]"
            value="<%=listing.location%>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid location</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country">Country</label>
        <input
          name="listing[country]"
          value="<%=listing.country%>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid country</div>
      </div>

      <button class="btn btn-dark edit-btn">Edit</button>
    </form>
    <br />
  </div>
</div>
